.schedules-index
  %h1 
    リスト一覧
  = link_to "リスト作成" ,new_list_path,class:"ui teal button"
    
  .ui.top.attached.tabular.menu
    =link_to schedules_path do
      .item
        %i.calendar.alternate.outline.icon
    =link_to follow_schedules_path do
      .item
        %i.share.alternate.icon
    =link_to list_index_path do
      .item.active
        %i.list.icon
  - @lists.order("id").each do |list|
    .schedules-index__item
      = link_to list_path(id: list.id, month: Date.current.to_s(:month)) do
        .schedule-name
          = list.name
      .action
        = link_to "リスト編集",edit_list_path(id: list.id),class:"mini ui teal button schedule-edit-button"